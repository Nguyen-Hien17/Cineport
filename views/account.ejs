<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cineport</title>
    <link rel="stylesheet" href="/css/sidebar.css" />
    <link rel="stylesheet" href="/css/account.css" />
    <link href='https://cdn.boxicons.com/3.0.6/fonts/basic/boxicons.min.css' rel='stylesheet'>
</head>

<body>
    <div class="home">
        <%- include('component/sidebar') %>
            <% if (user) { %>
                <div class="accountDetails">
                    <h1>Settings</h1>
                    <h2>Account</h2>
                    <div class="info">
                        <img src="data:image/jpeg;base64,"
                            alt="User Icon" class="user-icon">
                        <p>Email: <%= user.email %>
                        </p>
                    </div>
                    <h1>Language</h1>
                    <div class="language">
                        <p>English</p>
                    </div>
                    <!-- Add more account details as needed -->
                    <button onclick="window.location.href='/account/<%= user._id %>/export'" class="exportBtn">Export
                        Watchlist</button>
                    <button onclick="window.location.href='/account/<%= user._id %>/delete'" class="deleteBtn">Delete
                        Account</button>
                </div>
                <h1>Version</h1>
                <div class="version">
                    <p>1.0</p>
                </div>
                <h1>About</h1>
                <a href="#">Terms of service</a>
                <% } else { %>
                    <% } %>
    </div>

</body>

</html>