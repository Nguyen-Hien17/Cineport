            <% const availableServices=[ { name: 'Disney+' , logo: 'dp_logo.png' }, { name: 'Netflix' ,
                logo: 'n_logo.jpg' } ]; %>

                <div class="add-on-container">
                    <% availableServices.forEach(item=> {
                        const userSetting = user.addOn.find(a => a.service === item.name);
                        const isChecked = userSetting ? userSetting.isEnabled : false;
                        %>
                        <div class="add-on-card">
                            <img src="/image/temp_logo/<%= item.logo %>" alt="logo" class="service-img">

                            <span class="service-name text-nowrap">
                                <%= item.name %>
                            </span>

                            <label class="switch">
                                <input type="checkbox" value="<%= item.name %>" class="service-toggle" <%=isChecked
                                    ? 'checked' : '' %>
                                >
                                <span class="slider round"></span>
                            </label>
                        </div>
                        <% }); %>
                </div>

        </section>

        <script>
            const userId = document.body.dataset.userId;

            if (!userId) {
                console.warn('User not logged in');
            }

            document.querySelectorAll('.service-toggle').forEach(checkbox => {
                checkbox.addEventListener('change', async (event) => {
                    const serviceName = event.target.value;
                    const isEnabled = event.target.checked;

                    try {
                        const response = await fetch(`/account/${userId}/toggle-addon`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                service: serviceName,
                                isEnabled: isEnabled
                            })
                        });

                        if (!response.ok) {
                            throw new Error('Failed to update service status');
                        }

                        console.log(`${serviceName} is now ${isEnabled ? 'ON' : 'OFF'}`);
                    } catch (error) {
                        console.error('Error:', error);
                        event.target.checked = !isEnabled;
                        alert('Could not update setting. Please try again.');
                    }
                });
            });
        </script>

